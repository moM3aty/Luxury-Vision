<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - لوحة تحكم Luxury Vision</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin-style.css" />
    <link href="~/images/logo.png" rel="icon" />

</head>
<body>
    <div class="admin-wrapper">
        <aside class="sidebar">
            <div class="sidebar-header"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><img src="~/images/logo.png" style="background:#fff; border-radius:50%;" width="150px" alt="Luxury Vision" /></a></div>
            <ul class="sidebar-nav">
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt nav-icon"></i><span class="nav-text">لوحة التحكم</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Products"><i class="fas fa-box-open nav-icon"></i><span class="nav-text">المنتجات</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Categories"><i class="fas fa-tags nav-icon"></i><span class="nav-text">الأقسام</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="ShippingZones"><i class="fas fa-shipping-fast nav-icon"></i><span class="nav-text">مناطق الشحن</span></a></li>
                <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Orders"><i class="fas fa-receipt nav-icon"></i><span class="nav-text">الطلبات</span></a></li>
                <li class="nav-item separator"></li>
                <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" target="_blank"><i class="fas fa-globe nav-icon"></i><span class="nav-text">عرض الموقع</span></a></li>
            </ul>
        </aside>
        <main class="main-content">
            <header class="main-header"><h2>@ViewData["Title"]</h2></header>
            <div class="content-body">
                @RenderBody()
            </div>
        </main>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
