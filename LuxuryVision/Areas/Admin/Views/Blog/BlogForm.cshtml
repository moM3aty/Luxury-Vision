@model LuxuryVision.Models.BlogPost
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --admin-gold: #c5a47e;
        --admin-dark: #3a3a3a;
        --admin-bg-light: #fdfdfd;
    }

    .premium-form-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #eaeaea;
        max-width: 900px;
        margin: 2rem auto;
    }

    .form-header-bg {
        background: var(--admin-dark);
        padding: 30px;
        position: relative;
        overflow: hidden;
    }

        .form-header-bg::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100px;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(197, 164, 126, 0.1));
            transform: skewX(-20deg);
        }

        .form-header-bg h3 {
            color: var(--admin-gold);
            font-weight: 800;
            margin: 0;
            font-size: 1.8rem;
            position: relative;
            z-index: 2;
        }

        .form-header-bg p {
            color: rgba(255,255,255,0.6);
            margin: 5px 0 0;
            font-size: 0.9rem;
        }

    .form-content-area {
        padding: 40px;
    }

    .lux-form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .lux-label {
        display: block;
        margin-bottom: 10px;
        font-weight: 700;
        color: var(--admin-dark);
        font-size: 0.95rem;
    }

    .lux-input {
        width: 100%;
        padding: 15px 20px;
        background-color: var(--admin-bg-light);
        border: 2px solid #eee;
        border-radius: 10px;
        font-family: 'Cairo', sans-serif;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .lux-input:focus {
            border-color: var(--admin-gold);
            background-color: #fff;
            outline: none;
            box-shadow: 0 0 0 4px rgba(197, 164, 126, 0.1);
        }

    .file-upload-wrapper {
        border: 2px dashed #ddd;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        background: #fafafa;
    }

        .file-upload-wrapper:hover {
            border-color: var(--admin-gold);
            background: #fff;
        }

    .upload-icon {
        font-size: 2rem;
        color: #ccc;
        margin-bottom: 10px;
    }

    .current-image-preview {
        margin-top: 15px;
        position: relative;
        display: inline-block;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .form-footer {
        padding: 30px 40px;
        background-color: #fcfcfc;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: flex-end;
        gap: 15px;
    }

    .btn-lux-primary {
        background-color: var(--admin-gold);
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        border: none;
        font-weight: 700;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-lux-primary:hover {
            background-color: #b3916c;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(197, 164, 126, 0.3);
        }

    .btn-lux-secondary {
        background-color: transparent;
        color: #777;
        padding: 12px 30px;
        border-radius: 8px;
        border: 2px solid #eee;
        font-weight: 700;
        transition: all 0.3s;
    }

        .btn-lux-secondary:hover {
            background-color: #f5f5f5;
            color: #333;
        }

    /* --- CKEditor Customization --- */
    .ck-editor__editable_inline {
        min-height: 400px;
        border-radius: 0 0 10px 10px !important;
        border-color: #eee !important;
        font-family: 'Cairo', sans-serif !important;
        padding: 0 20px !important;
    }

    .ck-toolbar {
        border-radius: 10px 10px 0 0 !important;
        background-color: #f9f9f9 !important;
        border-color: #eee !important;
    }

    .ck.ck-editor__main > .ck-editor__editable:not(.ck-focused) {
        border-color: #eee !important;
    }

    .ck.ck-editor__main > .ck-editor__editable.ck-focused {
        border-color: var(--admin-gold) !important;
        box-shadow: 0 0 0 3px rgba(197, 164, 126, 0.1) !important;
    }
</style>

<div class="premium-form-card">
    <div class="form-header-bg">
        <h3><i class="fas fa-pen-nib"></i> @ViewBag.Title</h3>
        <p>قم بإدارة محتوى مدونتك بأسلوب احترافي.</p>
    </div>

    <form asp-action="BlogForm" method="post" enctype="multipart/form-data">
        <div class="form-content-area">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="lux-form-group">
                <label asp-for="Title" class="lux-label">عنوان المقال</label>
                <input asp-for="Title" class="lux-input" placeholder="اكتب عنواناً جذاباً..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="lux-form-group">
                <label asp-for="Author" class="lux-label">الكاتب</label>
                <input asp-for="Author" class="lux-input" placeholder="اسم الكاتب (اختياري)" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="lux-form-group">
                <label asp-for="Summary" class="lux-label">ملخص المقال</label>
                <textarea asp-for="Summary" class="lux-input" rows="3" placeholder="وصف مختصر يظهر في الكارت الخارجي لجذب القراء..."></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="lux-form-group">
                <label asp-for="Content" class="lux-label">محتوى المقال</label>
                <!-- استخدام Textarea عادي لربطه بـ CKEditor -->
                <textarea asp-for="Content" id="editor"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="lux-form-group">
                <label class="lux-label">صورة الغلاف</label>
                <div class="file-upload-wrapper" onclick="document.getElementById('imageUpload').click()">
                    <div class="upload-icon"><i class="fas fa-cloud-upload-alt"></i></div>
                    <p style="margin:0; color:#777; font-weight:600;">اضغط لرفع صورة جديدة</p>
                    <p style="margin:5px 0 0; color:#aaa; font-size:0.8rem;">(PNG, JPG, JPEG)</p>
                    <input name="ImageFile" id="imageUpload" type="file" accept="image/*" style="display:none;" onchange="previewImage(this)" />
                </div>

                <div id="imagePreviewContainer" style="@(string.IsNullOrEmpty(Model.ImageUrl) ? "display:none;" : "") text-align: center;">
                    <div class="current-image-preview">
                        <img id="previewImg" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "" : Model.ImageUrl)" alt="معاينة" style="height: 200px; display: block;" />
                    </div>
                    <p style="font-size: 0.8rem; color: #888; margin-top: 5px;">الصورة الحالية / المختارة</p>
                </div>
            </div>
        </div>

        <div class="form-footer">
            <a asp-action="Index" class="btn-lux-secondary">إلغاء</a>
            <button type="submit" class="btn-lux-primary"><i class="fas fa-save"></i> حفظ التغييرات</button>
        </div>
    </form>
</div>

@section Scripts {
    <!-- CKEditor 5 CDN -->
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/translations/ar.js"></script>

    <script>
        // تفعيل CKEditor على الـ textarea
        ClassicEditor
            .create(document.querySelector('#editor'), {
                language: 'ar', // واجهة عربية
                toolbar: [
                    'heading', '|',
                    'bold', 'italic', 'underline', 'strikethrough', '|',
                    'link', 'bulletedList', 'numberedList', 'blockQuote', '|',
                    'insertTable', 'mediaEmbed', 'undo', 'redo'
                ],
                heading: {
                    options: [
                        { model: 'paragraph', title: 'فقرة', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h2', title: 'عنوان رئيسي', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h3', title: 'عنوان فرعي', class: 'ck-heading_heading2' }
                    ]
                }
            })
            .then(editor => {
                console.log('Editor was initialized', editor);
            })
            .catch(error => {
                console.error(error);
            });

        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#previewImg').attr('src', e.target.result);
                    $('#imagePreviewContainer').fadeIn();
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}