@model LuxuryVision.ViewModels.ProductFormViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header"><h3>@ViewData["Title"]</h3></div>
    <div class="card-body">
        <form asp-action="ProductForm" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.ImageUrl" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-grid">
                <div class="form-column">
                    <div class="form-group">
                        <label asp-for="Product.Name">اسم المنتج</label>
                        <input asp-for="Product.Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.Description">الوصف</label>
                        <textarea asp-for="Product.Description" class="form-control" rows="5"></textarea>
                    </div>

                    <div class="form-group">
                        <label asp-for="Product.CategoryId">القسم</label>
                        <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                            <option value="">اختر قسم...</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageFile">صورة المنتج</label>
                        <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                    {
                        <div class="form-group">
                            <label>الصورة الحالية</label>
                            <img src="@Model.Product.ImageUrl" alt="الصورة الحالية" class="table-img" style="height: 100px; width: 100px; object-fit: contain;" />
                        </div>
                    }

                    <div class="form-group-inline">
                        <input asp-for="Product.IsFeatured" class="form-check-input" />
                        <label asp-for="Product.IsFeatured" class="form-check-label">منتج مميز؟</label>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Product.Price">السعر الحالي (ريال)</label>
                            <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Product.OldPrice">السعر قبل الخصم (اختياري)</label>
                            <input asp-for="Product.OldPrice" class="form-control" type="number" step="0.01" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Material">الخامة</label>
                        <input asp-for="Product.Material" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Weight">الوزن (مثال: 85 كجم)</label>
                        <input asp-for="Product.Weight" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Dimensions">الأبعاد (مثال: 200x180x120 سم)</label>
                        <input asp-for="Product.Dimensions" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CountryOfOrigin">بلد الصنع</label>
                        <input asp-for="Product.CountryOfOrigin" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Warranty">الضمان</label>
                        <input asp-for="Product.Warranty" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ</button>
                <a asp-action="Products" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>
