@model LuxuryVision.Models.ShippingZone
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card" style="max-width: 700px; margin: auto;">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <form asp-action="ShippingZoneForm" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ZoneName"></label>
                <input asp-for="ZoneName" class="form-control" />
                <span asp-validation-for="ZoneName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShippingCost"></label>
                <input asp-for="ShippingCost" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ShippingCost" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> حفظ</button>
                <a asp-action="ShippingZones" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>
