@model IEnumerable<LuxuryVision.Models.Category>
@{
    ViewData["Title"] = "إدارة الأقسام";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>إدارة الأقسام (@Model.Count())</h3>
        <a asp-action="CategoryForm" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة قسم جديد
        </a>
    </div>
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>الصورة</th>
                    <th>اسم القسم</th>
                    <th>عدد المنتجات</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@(item.ImageUrl ?? "/images/placeholder.png")" alt="@item.Name" class="table-img" /></td>
                        <td data-label="اسم القسم">@item.Name</td>
                        <td data-label="عدد المنتجات">@item.Products.Count()</td>
                        <td data-label="إجراءات">
                            <a asp-action="CategoryForm" asp-route-id="@item.Id" class="btn-action btn-edit"><i class="fas fa-pencil-alt"></i></a>
                            <button type="button" class="btn-action btn-delete" onclick="confirmDelete(@item.Id, '@item.Name', @item.Products.Count())">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4>تأكيد الحذف</h4>
            <button type="button" class="close-button" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p id="deleteMessage"></p>
        </div>
        <div class="modal-actions">
            <button type="button" class="btn btn-secondary" onclick="closeModal()">إلغاء</button>
            <form asp-action="DeleteCategory" method="post" id="deleteForm" style="display: contents;">
                @Html.AntiForgeryToken()
                <input type="hidden" id="categoryIdToDelete" name="id" value="" />
                <button type="submit" class="btn btn-danger">نعم، قم بالحذف</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var modal = document.getElementById('deleteModal');
        var deleteForm = document.getElementById('deleteForm');
        var deleteMessage = document.getElementById('deleteMessage');

        function confirmDelete(id, name, productCount) {
            if (productCount > 0) {
                deleteMessage.innerHTML = 'لا يمكن حذف القسم "<strong>' + name + '</strong>" لأنه يحتوي على منتجات مرتبطة به.';
                deleteForm.style.display = 'none';
            } else {
                deleteMessage.innerHTML = 'هل أنت متأكد من أنك تريد حذف القسم "<strong>' + name + '</strong>"؟';
                document.getElementById('categoryIdToDelete').value = id;
                deleteForm.style.display = 'contents';
            }
            modal.style.display = "block";
        }

        function closeModal() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeModal();
            }
        }
    </script>
}