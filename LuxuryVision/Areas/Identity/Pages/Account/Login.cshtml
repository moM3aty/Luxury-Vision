@page
@model LuxuryVision.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Areas/Identity/Pages/_Layout.cshtml";
}

<div class="login-container">
    <div class="login-form-wrapper">
        <div class="login-header">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Luxury Vision Logo" class="login-logo">
            </a>
            <h2>أهلاً بك مجدداً</h2>
            <p>سجل الدخول للوصول إلى لوحة التحكم</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label"><i class="fas fa-envelope"></i> البريد الإلكتروني</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="admin@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label"><i class="fas fa-lock"></i> كلمة المرور</label>
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group-inline">
                <label asp-for="Input.RememberMe" class="form-check-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    تذكرني
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة المرور؟</a>
            </div>

            <div class="form-group">
                <button id="login-submit" type="submit" class="btn btn-primary btn-block">تسجيل الدخول</button>
            </div>
        </form>
        <p class="mt-3 text-center">
            ليس لديك حساب؟ <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">أنشئ حساباً جديداً</a>
        </p>
    </div>
    <div class="login-image-wrapper">
        <img src="https://images.unsplash.com/photo-1524758631624-e2822e304c36?q=80&w=2070&auto=format&fit=crop" alt="Luxury Furniture">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}