@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="user-menu">
        <a class="nav-link" asp-controller="Account" asp-action="MyOrders">طلباتي</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link">تسجيل الخروج</button>
        </form>
    </div>
}
else
{
    <div class="auth-links">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">إنشاء حساب</a>
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
    </div>
}
